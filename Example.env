# =================================
# Pollinations AI Agent Configuration
# =================================

# API Token (Обязательно для генерации аудио)
# Получите токен на https://auth.pollinations.ai/
# Пример: POLLINATIONS_TOKEN=pol_12345abcdef67890

# =================================
# Interface Settings (Настройки интерфейса)
# =================================

# Язык интерфейса / Interface Language
# Поддерживаемые: ru, en
# Supported: ru, en
INTERFACE_LANGUAGE='ru'

# Язык вывода AI / AI Output Language
# Поддерживаемые: ru, en
# Supported: ru, en
OUTPUT_LANGUAGE='ru'

# Показывать выбор языка при первом запуске
# Show language selection on first startup
FIRST_STARTUP_LANGUAGE_SELECTION='false'

# =================================
# Default Settings (Настройки по умолчанию)
# =================================

# Модель по умолчанию / Default Model
# Доступные: openai, deepseek, grok, mistral, etc.
# Available: openai, deepseek, grok, mistral, etc.
DEFAULT_MODEL=openai

# Максимальное количество попыток для решения задачи
# Maximum attempts for task execution
MAX_ATTEMPTS=5

# Автоматический выбор модели для задач
# Automatic model selection for tasks
AUTO_MODEL_SELECTION=false

# =================================
# Audio Settings (Настройки аудио)
# =================================

# Голос по умолчанию для TTS / Default TTS Voice
# Для Pollinations: alloy, echo, fable, onyx, nova, shimmer
# Для FreeTTS: ru-RU001, ru-RU002, ru-RU003, ru-RU004
DEFAULT_VOICE=alloy

# =================================
# System Settings (Системные настройки)
# =================================

# Требовать подтверждение для опасных операций
# Require confirmation for dangerous operations
REQUIRE_CONFIRMATION=true

# Показывать отладочную информацию
# Show debug information
DEBUG_MODE=false
